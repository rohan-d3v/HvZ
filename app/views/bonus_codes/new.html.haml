%h2.dink Create New Bonus Code:
%div.span-5
  :plain
    &nbsp;
%div.span-12
  = form_for(@code) do |f|
    %table
      %tbody
         %tr
            %td
              %b=f.label :wants_oz, "Place me in the Original Zombie Pool!"
            %td
              =f.check_box :wants_oz
        %tr
          %td.admin= f.label :is_quest, "Is this a quest?:"
          %td= f.check_box :is_quest  
        %tr
          %td.admin= f.label :code, "Code:"
          %td= f.text_field :code
        %tr
          %td.admin= f.label :points, "Points:"
          %td= f.text_field :points
        %tr
          %td{:colspan=>2, :style=>"text-align:center"}=f.submit "Create Bonus Code"
